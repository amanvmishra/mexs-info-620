<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   borderVisible="false">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Label text="Transaction Completed Successfully" fontWeight="bold" fontSize="18"/>
	
	<s:VGroup width="100%" height="75%" bottom="10" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
		<s:Label text="Transaction Details" fontSize="14"/>
		<mx:DataGrid id="grid" color="0x323232" width="100%">
			<mx:columns>
				<mx:DataGridColumn dataField="name" headerText="Patron Name"/>
				<mx:DataGridColumn dataField="origin" headerText="Origin Country"/>
				<mx:DataGridColumn dataField="srcCode" headerText="Source Currency Code"/>
				<mx:DataGridColumn dataField="srcAmt" headerText="Source Amount"/>
				<mx:DataGridColumn dataField="commission" headerText="Commission Rate"/>
				<mx:DataGridColumn dataField="total" headerText="Total Amount"/>
			</mx:columns>
		</mx:DataGrid>
	</s:VGroup>
</s:BorderContainer>
